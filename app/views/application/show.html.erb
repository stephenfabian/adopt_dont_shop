<h1> Application Show Page </h1>

<p>Name: <%= @application.name %></p>
<p>Street address: <%= @application.street_address %></p>
<p>City: <%= @application.city %></p>
<p>State: <%= @application.state %></p>
<p>Zip: <%= @application.zip_code %></p>
<p>Description: <%= @application.description %></p>
<p>Pets: <%= @application.pets.each {|app_pet| app_pet.name }  %></p>

<p>Status: <%= @application.status %></p>

<h3> Search for a Pet to add to this Application </h3>
<%= form_with url: "/applications/#{@application.id}?pet_name_search=", method: :get, local: true do |form| %>
  <%= form.label :pet_name_search %>
  <%= form.text_field :pet_name_search %>
  <%= form.submit 'Submit' %>
<% end %>

<% if @pet_name_search_results.present? %>
   <%= @pet_name_search_results.name %>
   <%end%>
 